  exit 0
fi

mkdir -p "{{ .chezmoi.homeDir }}/.1password"

ln -snf "{{ .chezmoi.homeDir }}/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock" \
        "{{ .chezmoi.homeDir }}/.1password/agent.sock"
